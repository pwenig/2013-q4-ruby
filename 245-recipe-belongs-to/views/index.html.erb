<h1><%= @title %></h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Authors</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr>
      <td>
        <a href="/recipe/<%= recipe.name %>">
          <%= recipe.name %>
        </a>
      </td>
      <td>
        <a href="/by-author/<%= recipe.author.first_name %>">
        <%= recipe.author.first_name %>
      </a>
    </td>
    </tr>

  <% end %>
</table>
