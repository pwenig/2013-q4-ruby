<%= error_messages_for @new_employee %>

<h1>List of employees</h1>

<table class="table">
  <tr>
    <th>ID</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Company</th>
  </tr>

  <% @employees.each do |e| %>
    <tr>
      <td><%= e.id %></td>
      <td><%= e.first_name %></td>
      <td><%= e.last_name %></td>
      <td>TODO</td>
    </tr>
  <% end %>

  <tr>
    <td>(new)</td>
    <td><%= text_field_tag "first_name", @new_employee.first_name,
      size: 10 %></td>
    <td><%= text_field_tag "last_name", @new_employee.last_name,
      size: 10 %></td>
    <td>TODO</td>
    <td><%= submit_tag "Add" %></td>
  </tr>

</table>
