<h1><%= @header %></h1>

<table class = "table">
	<tr>
		<th>Title</th>
		<th>Author</th>
		<th>Published</th>
	</tr>
	<% @books.each do |book| %>
	<tr>
		<td>
			<a href ="/isbn/<%= book.isbn %>">  <!-- reference the GET request for /isbn/:isbn -->
